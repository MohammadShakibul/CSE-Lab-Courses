echo -e "enter the name of the file : \c"
read file_name

if [ -f $file_name ]
then
   echo "$file_nme found"
else
    echo "$file_name not found"
fi

#
echo -e "enter the name of the file : \c"
read file_name

if [ -d $file_name ]
then
   echo "$file_nme found"
else
    echo "$file_name not found"
fi

#
echo -e "enter the name of the file : \c"
read file_name

if [ -s $file_name ]
then
   echo "$file_nme empty"
else
    echo "$file_name not empty"
fi


